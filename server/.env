# Variables de entorno para Render
envVars:
  # === ENTORNO Y PLATAFORMA ===
  - key: RENDER
    value: "true"
  - key: PRODUCTION
    value: "true"
  - key: PYTHONPATH
    value: "/opt/render/project/src"
  - key: PYTHONUNBUFFERED
    value: "1"
  - key: PYTHONDONTWRITEBYTECODE
    value: "1"

  # === SERVIDOR ===
  - key: PORT
    value: "10000"  # Render usa 10000 por defecto
  - key: HOST
    value: "0.0.0.0"

  # === CHROME Y CHROMEDRIVER (RUTAS RENDER) ===
  - key: CHROME_BIN
    value: "/opt/render/.cache/chrome/bin/chrome"
  - key: CHROMEDRIVER_PATH
    value: "/opt/render/.cache/chromedriver/bin/chromedriver"
  
  # === DISPLAY VIRTUAL ===
  - key: DISPLAY
    value: ":99"

  # === CONFIGURACIÃ“N SELENIUM ===
  - key: HEADLESS
    value: "true"
  - key: WINDOW_SIZE
    value: "1920x1080"
  - key: SELENIUM_TIMEOUT
    value: "30"
  - key: REQUEST_TIMEOUT
    value: "60"
  - key: PROCESS_TIMEOUT
    value: "1800"

  # === ARCHIVOS Y DIRECTORIOS ===
  - key: TEMP_DIR
    value: "temp_results"
  - key: MAX_FILE_SIZE_MB
    value: "10"

  # === LOGGING ===
  - key: LOG_LEVEL
    value: "INFO"
  - key: LOG_FILE
    value: "logs/app.log"

  # === URLs MARRIOTT ===
  - key: URL_EXPRESS
    value: "https://www.joinmarriottbonvoy.com/calaqr/s/ES/ch/cunxc"
  - key: URL_JUNIOR
    value: "https://www.joinmarriottbonvoy.com/calaqr/s/ES/ch/cunjc"

  # === CONFIGURACIONES ADICIONALES PARA RENDER ===
  - key: RENDER_EXTERNAL_URL
    value: "https://server-marriott.onrender.com"  # Cambia por tu URL real
  - key: WEB_CONCURRENCY
    value: "1"
  - key: TIMEOUT
    value: "30"